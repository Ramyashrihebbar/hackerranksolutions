#include <bits/stdc++.h>

using namespace std;



int main()
{
    int n,rem=0,i=0,j=0;
    cin >> n;
    cin.ignore(numeric_limits<streamsize>::max(), '\n');
    while(n>0)
    {
        rem=n%2;
        n=n/2;
        if(rem==1)
            {
                i++;
                if(i>=j)
                    j=i;
            }
        else{
                i=0;
            }
    }
    cout<<j;
        
         

    return 0;
}
